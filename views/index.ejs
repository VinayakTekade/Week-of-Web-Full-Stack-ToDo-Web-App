<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ToDo List</title>
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <div class="container">
      <h1>Things To Do</h1>

      <form action="/create" method="post" class="task-adder">
        <input
          type="text"
          name="task"
          id="input-task"
          placeholder="Add a Task"
        />
        <input type="submit" value="Add" id="submit" />
      </form>

      <ul>
        <% tasklist.forEach(element => { %>
        <li>
          <span class="task-text"><%= element.text %> </span>
          <form action="/delete" method="post" style="display: inline-block">
            <input type="hidden" name="deleteid" value="<%= element.id %>" />
            <span
              ><input type="submit" class="delete-submit" value="&cross;"
            /></span>
          </form>
        </li>
        <% }); %>
      </ul>
    </div>
    <div id="background-selector">
      <span class="background" id="bg1"></span>
      <span class="background" id="bg2"></span>
      <span class="background" id="bg3"></span>
      <span class="background" id="bg4"></span>
    </div>
    <script src="./app.js"></script>
  </body>
</html>
